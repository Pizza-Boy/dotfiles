#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit && pkill -f test2.sh

super + w
	bspc node -c

super + t
	bspc desktop -l next

super + b
	bspc desktop -B

super + {s,f}
	bspc node -t {floating,fullscreen}

super + {grave,Tab}
	bspc {node,desktop} -f last

super + apostrophe
	bspc node -s last

super + {o,i}
	bspc wm --record-history off; \
	bspc node {older,newer} -f; \
	bspc wm --record-history on

super + r #reload the desktop
	bspc reload

super + y
	bspc node -w last.manual

super + m
	bspc node -s biggest

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {_,shift + }c
	bspc node -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + ctrl + {_,shift + }space
	bspc {node -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc node -e {west -10,south +10,north -10,east +10}

super + alt + shift + {h,j,k,l}
	bspc node -e {east -10,north +10,south -10,west +10}

super + ctrl + {1-9}
	bspc node -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

# brightness, media, volume keybindings

XF86AudioPlay
	playerctl play-pause

XF86AudioNext
	playerctl next

XF86AudioPrevious
	playerctl previous

XF86MonBrightnessUp
	xbacklight +10

XF86MonBrightnessDown
	xbacklight -5

XF86AudioRaiseVolume
	amixer -D pulse set Master 5%+ unmute

XF86AudioLowerVolume
	amixer -D pulse set Master 5%- unmute

XF86AudioMute
	amixer -D pulse set Master toggle

#
# wm independent hotkeys
#

super + Return
	urxvt	

super + space
	rofi -show run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
